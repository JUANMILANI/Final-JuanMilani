<div class="container-fluid bg-secondary m-10" style="height : 10vh">
    <div class="row justify-content-center align-items-center" style="height : 10vh">
        <div class="col-4 text-light mt-10">
            <form method="post" action="/login">
                <div class="form-group">
                    <label for="username">Nombre de usuario<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="pass">Contraseña<span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="pass" id="pass">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-info mt-3">Iniciar sesión</button>
</div>
</div>
